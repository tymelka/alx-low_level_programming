#include <stdlib.h>
#include <stdio.h>
#include <ctype.h>
#include "main.h"

/**
 * print_last_digit - a function that returns the last digit of a number
 * @n: integer number
 * Return: the last digit of number
 */
int print_last_digit(int n)

{
int ld;
ld = (n % 10);
if (ld < 0)
{
ld = (-1 * ld);
}
_putchar(ld + '0');
return (ld);
}
